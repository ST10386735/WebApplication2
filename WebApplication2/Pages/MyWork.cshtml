@page
@model WebApplication2.Pages.MyWorkModel
@{
    ViewData["Title"] = "My Work";
}

<body style="background-color:#D3CBB5">
    <div class="grid">
        <div class="card">
            <img src="/lib/images/huhuh.jpg" alt="Card Image">
            <div class="card-content">
                <h2>Wooden Hexagon Shelves</h2>
                <p>R2000</p>
            </div>
        </div>

        <div class="card">
            <img src="/lib/images/jkjkj.jpg" alt="Card Image">
            <div class="card-content">
                <h2>Wooden square shelves</h2>
                <p>R1800</p>
            </div>
        </div>

        <div class="card">
            <img src="/lib/images/klkl.jpg" alt="Card Image">
            <div class="card-content">
                <h2>Floating shelf</h2>
                <p>R3500</p>
            </div>
        </div>
    </div>
</body>
<style>
    .grid {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-gap: 20px;
        padding: 20px;
    }

    .grid-item {
        background-color: #f1f1f1;
        padding: 20px;
        border: 1px solid #ddd;
        box-sizing: border-box;
        text-align: center;
    }

        .grid-item h2 {
            margin: 0;
            margin-bottom: 10px;
        }

        .grid-item p {
            margin: 0;
        }

    .card {
        width: 300px;
        height: 400px;
        overflow: hidden;
        position: relative;
        transition: transform 0.3s ease;
    }

        .card:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url("image.jpg");
            background-size: cover;
            filter: blur(5px);
            transition: filter 0.3s ease;
            z-index: -1;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
        }

            .card:hover:before {
                filter: blur(0);
            }

    .card-content {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.6);
        color: white;
        padding: 20px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .card:hover .card-content {
        opacity: 1;
    }

    .card-content h2 {
        margin: 0;
        margin-bottom: 10px;
    }

    .card-content p {
        margin: 0;
    }
</style>
